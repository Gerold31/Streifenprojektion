\mode<presentation>

\definecolor{HUblue}{RGB}{0, 55, 108}

\setbeamercolor{structure}{fg=HUblue}

\setbeamercolor{palette primary}{fg=HUblue,bg=HUblue!30}
\setbeamercolor{palette secondary}{fg=HUblue,bg=HUblue!25}
\setbeamercolor{palette tertiary}{fg=HUblue,bg=HUblue!20}
\setbeamercolor{palette quaternary}{fg=HUblue,bg=HUblue!10}

\setbeamercolor{titlelike}{parent=palette quaternary}

\setbeamercolor{block title}{fg=HUblue,bg=HUblue}
\setbeamercolor{block title alerted}{use=alerted text,fg=HUblue,bg=alerted text.fg!75!bg}
\setbeamercolor{block title example}{use=example text,fg=HUblue,bg=example text.fg!75!bg}

\setbeamercolor{block body}{parent=normal text,use=block title,bg=block title.bg!25!bg}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=block title alerted.bg!25!bg}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=block title example.bg!25!bg}

\setbeamercolor{sidebar}{bg=HUblue!70}
  
\setbeamercolor{palette sidebar primary}{fg=HUblue}
\setbeamercolor{palette sidebar secondary}{fg=HUblue!75}
\setbeamercolor{palette sidebar tertiary}{fg=HUblue!75}
\setbeamercolor{palette sidebar quaternary}{fg=HUblue}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\mode
<all>
